<idea-plugin version="2">
  <id>com.roomj.simpletitlesprojectonly</id>
  <name>Simple Titles - Project Only</name>
  <version>1.0</version>
  <vendor url="https://github.com/kjaniszewski/simple-titles-project-only">Krzysztof Janiszewski</vendor>

  <description><![CDATA[
      Fork of https://github.com/tylercal/simple-titles.

      Limit the Jetbrains Product window title to only include the project name.

      This can be useful with using time tracking services.
    ]]></description>

  <change-notes><![CDATA[
      <strong>1.0:</strong> initial version<br>
    ]]>
  </change-notes>

  <idea-version since-build="131"/>

  <depends>com.intellij.modules.lang</depends>

  <application-components>
    <component>
      <implementation-class>com.roomj.simpletitlesprojectonly.TitleComponent</implementation-class>
    </component>
  </application-components>

</idea-plugin>